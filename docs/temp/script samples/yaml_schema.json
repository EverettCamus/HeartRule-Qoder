{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "cbt yaml script schema",
  "definitions": {
    "declare": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "var": {
            "type": "string"
          },
          "define": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": ["var"]
      }
    },
    "output": {
      "type": "array",
      "items": {
        "type": "object",
        "anyOf": [
          {
            "properties": {
              "get": {
                "type": "string"
              },
              "define": {
                "type": "string"
              }
            },
            "additionalProperties": false,
            "required": ["get"]
          },
          {
            "properties": {
              "set": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "condition": {
                "type": "string"
              }
            },
            "additionalProperties": false,
            "required": ["set", "value"]
          }
        ]
      }
    },
    "chats": {
      "type": "array",
      "items": {
        "type": "object",
        "anyOf": [
          {
            "properties": {
              "goal_chat": {
                "type": "string"
              },
              "stage_chat": {
                "type": "string"
              },
              "session_chat": {
                "type": "string"
              }
            }
          }
        ]
      },
      "additionalProperties": false
    },
    "say": {
      "properties": {
        "say": {
          "type": "string"
        },
        "condition": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["say"]
    },
    "ai_say": {
      "properties": {
        "ai_say": {
          "type": "string"
        },
        "condition": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["ai_say"]
    },
    "user_say": {
      "properties": {
        "user_say": {
          "type": "string"
        },
        "condition": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["user_say"]
    },
    "user_option": {
      "properties": {
        "user_option": {
          "type": "string"
        },
        "choices": {
          "type": "array",
          "items": {
            "type": "object",
            "patternProperties": {
              "^[A-Z]$": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false,
      "required": ["user_option", "choices"]
    },
    "ai_ask": {
      "properties": {
        "ai_ask": {
          "type": "string"
        },
        "tolist": {
          "type": "string"
        },
        "output": {
          "$ref": "#/definitions/output"
        },
        "condition": {
          "type": "string"
        },
        "save": {
          "type": "string"
        },
        "exit": {
          "type": "string"
        },
        "who": {
          "type": "string"
        },
        "tone": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["ai_ask", "output"]
    },
    "think": {
      "properties": {
        "think": {
          "type": "string"
        },
        "chats": {
          "$ref": "#/definitions/chats"
        },
        "condition": {
          "type": "string"
        },
        "tolist": {
          "type": "string"
        },
        "output": {
          "$ref": "#/definitions/output"
        }
      },
      "additionalProperties": false,
      "required": ["think", "output"]
    },
    "call": {
      "properties": {
        "call": {
          "type": "string"
        },
        "condition": {
          "type": "string"
        },
        "timing": {
          "type": "string",
          "enum": ["NOW", "BEFORE_GOAL", "AFTER_GOAL", "AFTER_STAGE"]
        },
        "timing_to": {
          "type": "string"
        },
        "fromlist": {
          "type": "string"
        },
        "input": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["set", "value"],
            "properties": {
              "set": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          }
        },
        "output": {
          "$ref": "#/definitions/output"
        }
      },
      "additionalProperties": false,
      "required": ["call"]
    },
    "fill": {
      "properties": {
        "fill": {
          "type": "string"
        },
        "condition": {
          "type": "string"
        },
        "tolist": {
          "type": "string"
        },
        "output": {
          "$ref": "#/definitions/output"
        }
      },
      "additionalProperties": false,
      "required": ["fill"]
    },
    "rule": {
      "type": "object",
      "properties": {
        "rule": {
          "type": "string"
        },
        "trigger": {
          "type": "string"
        },
        "call": {
          "type": "string"
        },
        "timing": {
          "type": "string",
          "enum": ["now", "goal", "stage", "session"]
        }
      },
      "required": ["rule", "trigger", "call", "timing"],
      "additionalProperties": false
    },
    "foreach": {
      "properties": {
        "foreach": {
          "type": "string"
        },
        "node": {
          "type": "string"
        },
        "condition": {
          "type": "string"
        },
        "do": {
          "$ref": "#/definitions/actions"
        }
      },
      "additionalProperties": false,
      "required": ["foreach", "do"]
    },
    "loop_until": {
      "properties": {
        "loop_until": {
          "type": "string"
        },
        "condition": {
          "type": "string"
        },
        "do": {
          "$ref": "#/definitions/actions"
        }
      },
      "additionalProperties": false,
      "required": ["loop_until", "do"]
    },
    "if": {
      "properties": {
        "if": {
          "type": "string"
        },
        "do": {
          "$ref": "#/definitions/actions"
        }
      },
      "additionalProperties": false,
      "required": ["if", "do"]
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "anyOf": [
          {
            "$ref": "#/definitions/say"
          },
          {
            "$ref": "#/definitions/user_say"
          },
          {
            "$ref": "#/definitions/user_option"
          },
          {
            "$ref": "#/definitions/ai_say"
          },
          {
            "$ref": "#/definitions/ai_ask"
          },
          {
            "$ref": "#/definitions/think"
          },
          {
            "$ref": "#/definitions/call"
          },
          {
            "$ref": "#/definitions/fill"
          },
          {
            "$ref": "#/definitions/foreach"
          },
          {
            "$ref": "#/definitions/loop_until"
          },
          {
            "$ref": "#/definitions/if"
          }
        ]
      }
    },
    "fields": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "text": {
                "type": "string"
              },
              "value": {
                "type": ["string", "null"]
              },
              "placeholder": {
                "type": "string"
              },
              "required": {
                "type": "boolean"
              },
              "multiline": {
                "type": "boolean"
              }
            },
            "additionalProperties": false,
            "required": ["text"]
          },
          {
            "properties": {
              "combobox": {
                "type": "string"
              },
              "value": {
                "type": ["string", "null"]
              },
              "placeholder": {
                "type": "string"
              },
              "required": {
                "type": "boolean"
              },
              "choices": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false,
                  "required": ["value"]
                }
              }
            },
            "additionalProperties": false,
            "required": ["combobox", "choices"]
          },
          {
            "properties": {
              "date": {
                "type": "string"
              },
              "value": {
                "type": ["string", "null"],
                "format": "date"
              },
              "placeholder": {
                "type": "string"
              }
            },
            "additionalProperties": false,
            "required": ["date"]
          }
        ]
      }
    },
    "python": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "return": {
            "type": "string"
          },
          "params": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "param": {
                  "type": "string"
                },
                "value": {
                  "type": "object"
                }
              },
              "additionalProperties": false,
              "required": ["param", "value"]
            }
          },
          "func": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": ["return", "params", "func"]
      }
    },
    "goal": {
      "type": "object",
      "properties": {
        "goal": {
          "type": "string"
        },
        "declare": {
          "$ref": "#/definitions/declare"
        },
        "actions": {
          "$ref": "#/definitions/actions"
        }
      },
      "additionalProperties": false,
      "required": ["goal", "actions"]
    }
  },
  "type": "object",
  "properties": {
    "sessions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "session": {
            "type": "string"
          },
          "declare": {
            "$ref": "#/definitions/declare"
          },
          "stages": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "stage": {
                  "type": "string"
                },
                "declare": {
                  "$ref": "#/definitions/declare"
                },
                "steps": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "anyOf": [
                      {
                        "properties": {
                          "scene": {
                            "type": "string"
                          },
                          "ai": {
                            "type": "string"
                          },
                          "human": {
                            "type": "string"
                          }
                        },
                        "additionalProperties": false,
                        "required": ["scene", "ai"]
                      },
                      {
                        "properties": {
                          "goal": {
                            "type": "string"
                          },
                          "declare": {
                            "$ref": "#/definitions/declare"
                          },
                          "actions": {
                            "$ref": "#/definitions/actions"
                          }
                        },
                        "additionalProperties": false,
                        "required": ["goal", "actions"]
                      }
                    ]
                  }
                }
              },
              "additionalProperties": false,
              "required": ["stage", "steps"]
            }
          }
        },
        "additionalProperties": false,
        "required": ["session", "stages"]
      }
    },
    "forms": {
      "type": "array",
      "items": {
        "type": "object",
        "anyOf": [
          {
            "properties": {
              "form": {
                "type": "string"
              },
              "fields": {
                "$ref": "#/definitions/fields"
              },
              "python": {
                "$ref": "#/definitions/python"
              }
            },
            "additionalProperties": false,
            "required": ["form", "fields"]
          },
          {
            "properties": {
              "table": {
                "type": "string"
              },
              "rows": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": {
                    "type": ["string", "null"]
                  }
                }
              },
              "format": {
                "$ref": "#/definitions/fields"
              }
            },
            "additionalProperties": false,
            "required": ["table", "rows"]
          }
        ]
      }
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["AI", "HUMAN"]
          },
          "sound_mode": {
            "type": "string"
          },
          "define": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "desc": {
            "type": "string"
          },
          "tone": {
            "type": "string"
          },
          "pic": {
            "type": "string"
          }
        },
        "required": ["role", "type", "name"],
        "additionalProperties": false
      }
    },
    "global": {
      "$ref": "#/definitions/declare"
    },
    "rules": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/rule"
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/goal"
      }
    }
  },
  "additionalProperties": false
}
