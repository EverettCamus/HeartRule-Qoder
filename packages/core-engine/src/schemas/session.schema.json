{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "session.schema.json",
  "title": "Session Schema",
  "description": "Session 顶层 Schema",
  "type": "object",
  "required": ["session"],
  "properties": {
    "session": {
      "type": "object",
      "required": ["session_id", "phases"],
      "properties": {
        "session_id": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "pattern": "^[a-zA-Z0-9_]+$",
          "description": "会话唯一标识"
        },
        "session_name": {
          "type": "string",
          "maxLength": 200,
          "description": "会话显示名称"
        },
        "template_scheme": {
          "type": "string",
          "maxLength": 100,
          "description": "模板方案配置"
        },
        "description": {
          "type": "string",
          "maxLength": 1000,
          "description": "会话描述"
        },
        "version": {
          "type": "string",
          "maxLength": 50,
          "description": "会话版本"
        },
        "phases": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "phase.schema.json"
          },
          "description": "阶段列表"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
