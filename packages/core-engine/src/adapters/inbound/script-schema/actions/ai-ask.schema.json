{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ai-ask-config.schema.json",
  "title": "AI Ask Action Config Schema",
  "description": "ai_ask 动作的配置 Schema",
  "type": "object",
  "required": ["content"],
  "properties": {
    "content": {
      "type": "string",
      "minLength": 1,
      "description": "提问内容模板"
    },
    "tone": {
      "type": "string",
      "description": "语气风格"
    },
    "exit": {
      "type": "string",
      "description": "退出条件"
    },
    "output": {
      "type": "array",
      "items": {
        "$ref": "output-field.schema.json"
      },
      "description": "输出变量配置"
    },
    "max_rounds": {
      "type": "number",
      "minimum": 1,
      "maximum": 10,
      "description": "最大轮数"
    }
  },
  "additionalProperties": false
}
