{
  "name": "@heartrule/api-server",
  "version": "2.0.0",
  "private": true,
  "description": "Fastify API Server",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push:pg",
    "typecheck": "tsc --noEmit",
    "test:flow": "tsx test-full-flow.ts",
    "test:welcome": "tsx test-full-welcome.ts"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/websocket": "^10.0.0",
    "@heartrule/core-engine": "workspace:*",
    "@heartrule/shared-types": "workspace:*",
    "dotenv": "^16.4.0",
    "drizzle-orm": "^0.29.3",
    "fastify": "^4.26.0",
    "fastify-type-provider-zod": "^6.1.0",
    "ioredis": "^5.3.2",
    "postgres": "^3.4.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "drizzle-kit": "^0.20.13",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2"
  }
}
