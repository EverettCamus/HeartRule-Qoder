# HeartRule AI咨询引擎环境变量配置

# LLM API密钥（必填）
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# 火山引擎 DeepSeek API配置
VOLCANO_API_KEY=your_volcano_api_key_here
VOLCANO_ENDPOINT_ID=ep-20241106123456-abcde

# 环境（development, testing, production）
ENV=development

# 数据库路径（可选，默认使用config中的配置）
# DATABASE_PATH=./data/heartrule.db

# 日志级别（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=DEBUG

# 是否启用调试模式
DEBUG=true

# API密钥（用于API认证，可选）
# API_SECRET_KEY=your_secret_key_here
